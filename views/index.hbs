
{{> navbar}}
<header>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>AD'INFO</h1>
                <div id="typed-strings">
                    <h1 id="hello">Achetez ,<strong>vendez ,</strong>échangez </h1>
                    <p>En toute<em></em> simplicité !</p>
                </div>
                <span id="typed"></span>
            </div>
            <!-- <blockquote><cite>C'est avec le binnaire qu'on contruit l'avenir !</cite> </blockquote> -->
        </div>
        <div class="liner mx-auto"></div>
        <div class="liner1 mx-auto"></div>
    </div>
</header>
<main>
    <div class="container">
        <div class="row">
            <div class="col-md-12 mx-auto">
                <div class="card search-bar">
                    <form action="#" method="POST">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <input type="text" class="form-control" placeholder="Que recherchez vous ?">
                            </div>
                            <div class="form-group col-md-4">
                                <select id="inputState" class="form-control custom-select">
                                    <option selected>Catégorie</option>
                                    <option>Informatique</option>
                                    <option>Location</option>
                                    <option>Voiture</option>
                                </select>
                            </div>
                            <div class="form-group col-md-2 search">
                                <button type="submit" class="btn btn-success">Rechercher</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <section>
        <div class="container">
             <div class="row">
                {{#each annonces}}
                <div class="col-md-6">
                    <a class="ads" href="/annonce/{{_id}}">
                        <div class="d-block d-md-flex listing">
                            <span class="img d-block" style="background-image: url('./ressources/img/img_2.jpg')">
                                <span class="price">
                                    {{ads_price}}€
                                </span>
                            </span>
                            <div class="lh-content">
                                <h2>{{ads_title}}</h2>

                                <br>
                                <em>Vente</em>
                                <br>
                                <em>{{formatRelative date}}</em>
                                <address>Arinfo la roche</address>
                            </div>
                        </div>
                    </a>
                </div>
                {{/each}}

                
            </div>
            

        </div>
    </section>
</main>
{{> footer}}